@model IEnumerable<MVC_Activity01.Models.OrderDTO>

@*Shared Folder Partial View*@
<div id="ordList">
    <table style="width:100%;margin-top:10px;">
        <tr>
            <th>Order No.</th>
            <th>Order Date</th>
            <th>Order Name</th>
            <th>Customer Name</th>
            <th>Total Amount</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.No
                </td>
                <td>@item.DocDate.ToShortDateString()</td>
                <td>@item.OrderName</td>
                <td>@item.Customer.Lastname, @item.Customer.Firstname @item.Customer.Middlename </td>
                <td>@item.Amount</td>
            </tr>
        }

    </table>
</div>
